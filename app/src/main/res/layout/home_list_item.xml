<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_list_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/home_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스타벅스 기프티콘"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@id/home_list_image"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/home_list_place_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안양시"
        android:textColor="#7A7A7A"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@id/home_list_image"
        app:layout_constraintTop_toBottomOf="@id/home_list_title"
        android:paddingStart="10dp"
        android:layout_marginTop="1dp"/>

    <TextView
        android:id="@+id/home_list_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,500원"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/home_list_image"
        app:layout_constraintTop_toBottomOf="@id/home_list_place_time"
        android:paddingStart="10dp"
        android:layout_marginTop="1dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_list_like"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_list_like_num"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="2dp"/>

    <TextView
        android:id="@+id/home_list_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6C6C6C"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="1dp"/>

    <View
        android:id="@+id/border_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF"
        app:layout_constraintTop_toBottomOf="@id/home_list_cost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>